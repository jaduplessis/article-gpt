{
  "openapi": "3.0.0",
  "info": {
    "title": "gen-ai-poc-api",
    "version": "1.0"
  },
  "servers": [
    {
      "url": "${}"
    }
  ],
  "paths": {
    "/invoke-model": {
      "post": {
        "operationId": "invokeModel",
        "summary": "Invokes a Bedrock model",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "prompt": {
                    "type": "string"
                  }
                },
                "required": ["prompt"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Successful response",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/invokeModelResponseModel"
                }
              }
            }
          },
          "404": {
            "description": "Not Found",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/errorModel"
                }
              }
            }
          }
        },
        "x-amazon-apigateway-integration": {
          "httpMethod": "POST",
          "uri": "arn:aws:apigateway:us-east-1:lambda:path/2015-03-31/functions/${invoke_model}/invocations",
          "passthroughBehavior": "when_no_match",
          "type": "aws_proxy"
        },
        "x-amazon-apigateway-request-validator": "Validate query string parameters and headers"
      }
    },
    "/generate-presigned-url": {
      "get": {
        "operationId": "generatePresignedUrl",
        "summary": "Generates a presigned URL for S3 upload",
        "responses": {
          "200": {
            "description": "Successful response",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "uploadUrl": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          },
          "500": {
            "description": "Server Error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/errorModel"
                }
              }
            }
          }
        },
        "x-amazon-apigateway-integration": {
          "httpMethod": "POST",
          "uri": "arn:aws:apigateway:us-east-1:lambda:path/2015-03-31/functions/${generate_presigned_url}/invocations",
          "passthroughBehavior": "when_no_match",
          "type": "aws_proxy"
        },
          "x-amazon-apigateway-request-validator": "Validate query string parameters and headers"
      }
    }
  },
  "components": {
    "schemas": {
      "invokeModelResponseModel": {
        "title": "POST /invoke-model",
        "type": "object"
      },
      "errorModel": {
        "title": "Error Model",
        "type": "object",
        "properties": {
          "message": {
            "type": "string"
          }
        },
        "required": ["message"]
      }
    }
  },
  "x-amazon-apigateway-request-validators": {
    "Validate query string parameters and headers": {
      "validateRequestParameters": true,
      "validateRequestBody": false
    }
  }
}
