########################################################################################################################
# Quality checks
########################################################################################################################

test:
	poetry run pytest tests

black:
	poetry run black . --check

ruff:
	poetry run ruff check src tests

fix-ruff:
	poetry run ruff check src tests --fix

mypy:
	poetry run mypy src

########################################################################################################################
# Api
########################################################################################################################

start-api:
	docker compose up -d

update-api:
	docker compose build



